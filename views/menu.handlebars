<h3 class="menu-title"> Menu Items</h3>
<ol class="menu-list">
  {{#each menuItems as |menuItems|}}
  <li class="menu-display">
    <article class="menu">
      <div class="title">
        <span>Menu Item:({{description}})</span>
      </div>
      <div class="meta">
        <p>Description: {{ingredients}}</p> 
        <p>price: ${{price}} available</p>
        <p>at</p>
        <p>Store Number: {{location}}</p>

      <a href="/single-menu/{{menu.id}}">{{menu.description.price}} Edit Menu Item</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>

<script src="/javascript/updatemenu.js"></script>