<div class="container new-form">
  <div class="row justify-content-md-center">
    <form class="new-form-style">
      <div class="form-group">
        <label for="res-number" class="col-form-label col-form-label-lg">Restaurant Number</label>
        <input type="email" class="form-control form-control-lg" id="res-number" aria-describedby="emailHelp" placeholder="Enter Number">
      </div>
      <div class="form-group">
        <label for="res-address" class="col-form-label col-form-label-lg">Restaurant Address</label>
        <input type="text" class="form-control form-control-lg" id="res-address" placeholder="Enter Address">
      </div>
      <button type="submit" class="btn btn-primary">Open Location!</button>
    </form>
  </div>
</div>